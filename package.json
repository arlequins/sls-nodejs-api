{
  "name": "sls-nodejs-api",
  "version": "0.0.1",
  "description": "sls-nodejs-api",
  "engines": {
		"node": ">=20.x"
	},
  "scripts": {
    "start": "serverless offline --httpPort=4000",
    "deploy:local:develop": "serverless deploy --stage develop --aws-profile default",
    "deploy:develop": "serverless deploy --stage develop",
    "deploy:production": "serverless deploy --stage production",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "test": "jest --passWithNoTests --collect-coverage",
    "docs": "npx @redocly/cli preview-docs docs/openapi/split/openapi.yaml",
    "docs:bundle": "npx @redocly/cli bundle api@develop -o ./build/docs/openapi.yml",
    "docs:bundle:production": "npx @redocly/cli bundle api@production -o ./build/docs/openapi.yml",
    "docs:build": "npx @redocly/cli build-docs api@develop -o ./build/docs/index.html",
    "prepare": "husky install"
  },
  "author": "arlequins",
  "dependencies": {
    "@middy/core": "3.1.0",
    "@middy/http-error-handler": "3.1.0",
    "@middy/http-json-body-parser": "3.1.0",
    "@types/aws-lambda": "^8.10.129",
    "aws-sdk": "^2.1508.0",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "http-errors": "^2.0.0",
    "pg": "^8.11.3",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.30.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.10",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "aws-lambda": "^1.0.7",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "json-schema-to-ts": "^2.9.2",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-add-api-key": "^4.2.1",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-tscpaths": "^0.0.8",
    "serverless-vpc-plugin": "^1.0.6",
    "ts-jest": "^29.1.1",
    "typescript": "5.3.2"
  }
}
